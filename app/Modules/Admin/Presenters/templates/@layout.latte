<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {ifset description}
        <meta name="description" content="{include description}">{/ifset}
	{ifset keywords}
        <meta name="keywords" content="{include keywords}">{/ifset}
    <title>{ifset title}{include title|stripHtml} | {/ifset}reproman.cz / administrace</title>
    <link rel="stylesheet" media="screen" href="{$basePath}/css/main.css">
    <link rel="stylesheet" media="screen" href="{$basePath}/css/reproman.css">
    <link rel="stylesheet" media="screen" href="{$basePath}/css/admin.css">
    <link rel="stylesheet" media="screen" href="{$basePath}/css/mobil.css">
    <script src="{$basePath}/scripts/jquery-3.6.0.min.js" type="text/javascript"></script>
    {*Google Fonts*}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- dataTables -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8"
        src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>
    <script src="{$basePath}/scripts/datetime-moment.js" type="text/javascript"></script>
    <script src="{$basePath}/scripts/moment.min.js" type="text/javascript"></script>
    {*    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.css">*}
    {*    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.js"></script>*}
</head>
<body>

<header>
    <div class="header-admin topnav">
        <a n:href=":Homepage:default" class="logo"><img src="{$basePath}/images/logo.png" width="" height="" title=""
                                                        alt=""/></a>
        <div class="header-admin-nav">
                <a n:href=":Homepage:default">Hlavní strana</a>
            {if $user->isLoggedIn()}
                <a href="https://client.packeta.com/cs/">Zásilkovna</a>
                {if $environment === 'dev'}
                    <a href="https://test.portal.gpwebpay.com/portal/anon/login.xhtml">Platební brána</a>
                {elseif $environment === 'prod'}
                    <a href="https://portal.gpwebpay.com/portal/index.xhtml">Platební brána</a>
                {/if}
                <a n:href="Sign:out" class="active"> | Odhlásit</a>
            {/if}
        </div>
    </div>
</header>

<div class="page">
    <div class="page-in">
        <div class="content">
            <main style="width: 100%">
                <div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>
                {include content}
            </main>
        </div>
        <footer>
        </footer>
    </div>
</div>

{block scripts}
    <script src="https://nette.github.io/resources/js/3/netteForms.min.js"></script>
    <script>
        function myFunction() {
            var x = document.getElementById("myTopnav");
            if (x.className === "topnav") {
                x.className += " responsive";
            } else {
                x.className = "topnav";
            }
        }
    </script>
{/block}
</body>
</html>
